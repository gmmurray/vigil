{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "vigil",
  "main": "./src/worker/index.ts",
  "compatibility_date": "2026-02-06",
  "compatibility_flags": ["nodejs_compat"],
  "workers_dev": false,
  "preview_urls": false,
  "vars": {
    "CHECK_RESULTS_RETENTION_DAYS": "15"
  },
  "triggers": {
    "crons": ["0 3 * * *"]
  },
  "observability": {
    "enabled": true
  },
  "upload_source_maps": true,
  "assets": {
    "directory": "./dist/client",
    "not_found_handling": "single-page-application"
  },
  "durable_objects": {
    "bindings": [
      {
        "name": "MONITOR",
        "class_name": "MonitorObject"
      }
    ]
  },
  "migrations": [
    {
      "tag": "v1",
      "new_classes": ["MonitorObject"]
    }
  ],
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "vigil-db",
      "database_id": "YOUR_DB_ID_HERE",
      "migrations_dir": "src/worker/drizzle"
    }
  ]
}
